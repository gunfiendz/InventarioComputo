@page
@model InventarioComputo.Pages.EquiposRegistrados.EquiposRegistradosModel
@{
    ViewData["Title"] = "Equipos Registrados";
    Layout = "_LayoutGeneral";
}

@using InventarioComputo.Security
@inject PermisosService Perms

@{
    var canModEquipos = await Perms.TieneAsync(User, PermisosConstantes.ModificarEquipos);
    var hasRoot = await Perms.TieneAsync(User, PermisosConstantes.AccesoTotal);
}

<div class="inventario-container">
    <div class="inventario-header">
        <h1 class="beige-text"><i class="fas fa-laptop"></i> @ViewData["Title"]</h1>
        @if (canModEquipos)
        {
            <a asp-page="EquiposForm" asp-route-handler="Crear" class="btn btn-beige">
                <i class="fas fa-plus"></i> Nuevo Perfil
            </a>
        }
    </div>

    <form method="get" class="filtros-container beige-bg">
        <div class="filtros-group">
            <div class="filtro-item">
                <label class="form-label beige-text">Tipo de Equipo:</label>
                <select id="filtro-tipo" name="tipo" class="form-select input-beige">
                    <option value="">Todos</option>
                    @foreach (var tipo in Model.TiposEquipo)
                    {
                        <option value="@tipo.Id" selected="@(tipo.Id.ToString() == Model.TipoFilter)">@tipo.Nombre</option>
                    }
                </select>
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Marca:</label>
                <select id="filtro-marca" name="marca" class="form-select input-beige">
                    <option value="">Todas</option>
                    @foreach (var marca in Model.Marcas)
                    {
                        <option value="@marca.Id" selected="@(marca.Id.ToString() == Model.MarcaFilter)">@marca.Nombre</option>
                    }
                </select>
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Buscar:</label>
                <input type="text" id="filtro-busqueda" name="busqueda" class="form-control input-beige"
                       placeholder="Modelo, características..." value="@Model.BusquedaFilter">
            </div>
        </div>

        <input type="hidden" name="sortColumn" value="@Model.SortColumn" />
        <input type="hidden" name="sortDirection" value="@Model.SortDirection" />
        <input type="hidden" name="pagina" value="1" />

        <div class="d-flex justify-content-end mt-2">
            <a href="/EquiposRegistrados/Index" class="btn btn-cancelar me-2">Limpiar</a>
            <button type="submit" class="btn btn-beige-sm"><i class="fas fa-filter"></i> Aplicar Filtros</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-beige sortable-table">
            <thead>
                <tr>
                    <th data-sort-column="NombrePerfil">
                        <a href="#" class="sort-link">
                            Nombre del Perfil
                            @if (Model.SortColumn == "NombrePerfil")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Marca">
                        <a href="#" class="sort-link">
                            Marca
                            @if (Model.SortColumn == "Marca")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Modelo">
                        <a href="#" class="sort-link">
                            Modelo
                            @if (Model.SortColumn == "Modelo")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Tipo">
                        <a href="#" class="sort-link">
                            Tipo
                            @if (Model.SortColumn == "Tipo")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th>Características</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var modelo in Model.Modelos)
                {
                    <tr>
                        <td>@modelo.NombrePerfil</td>
                        <td>@modelo.Marca</td>
                        <td>@modelo.NombreModelo</td>
                        <td>@modelo.Tipo</td>
                        <td>
                            <ul class="lista-caracteristicas">
                                @foreach (var car in modelo.Caracteristicas)
                                {
                                    <li>@car</li>
                                }
                            </ul>
                        </td>
                        <td class="acciones">
                            @if (canModEquipos)
                            {
                                <a href="/EquiposRegistrados/EquiposForm/Editar/@modelo.Id" class="btn btn-action" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                            }
                            else
                            {
                                <a href="/EquiposRegistrados/EquiposForm/Ver/@modelo.Id" class="btn btn-action" title="Ver">
                                    <i class="fas fa-eye"></i>
                                </a>
                            }

                            @if (hasRoot)
                            {
                                <button class="btn btn-action btn-eliminar"
                                        data-id="@modelo.Id"
                                        data-perfil="@modelo.NombrePerfil"
                                        title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="paginacion">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    var url = $"/EquiposRegistrados?pagina={i}" +
                    $"&sortColumn={Model.SortColumn}" +
                    $"&sortDirection={Model.SortDirection}" +
                    $"&tipo={Model.TipoFilter}" +
                    $"&marca={Model.MarcaFilter}" +
                    $"&busqueda={Model.BusquedaFilter}";
                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                        <a class="page-link" href="@url">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header beige-bg">
                <h5 class="modal-title beige-text">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea eliminar el perfil: <strong id="perfilAEliminar"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form method="post" asp-page-handler="Delete" id="formEliminar">
                    <input type="hidden" name="id" id="idPerfilAEliminar" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/Styles/Style_Inventario.css" asp-append-version="true" />
    <style>
        .lista-caracteristicas {
            padding-left: 1rem;
            margin-bottom: 0;
            max-height: 150px;
            overflow-y: auto;
        }

            .lista-caracteristicas li {
                font-size: 0.9rem;
            }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Ordenamiento: usa el FORM GET (ajusta hidden inputs y envía)
            const filtrosForm = document.querySelector('form.filtros-container');
            document.querySelectorAll('.sort-link').forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const column = this.closest('th').dataset.sortColumn;

                    const sortColInput = filtrosForm.querySelector('input[name="sortColumn"]');
                    const sortDirInput = filtrosForm.querySelector('input[name="sortDirection"]');
                    const paginaInput = filtrosForm.querySelector('input[name="pagina"]');

                    const currentCol = sortColInput.value || 'NombrePerfil';
                    const currentDir = (sortDirInput.value || 'ASC').toUpperCase();
                    const newDir = (currentCol === column && currentDir === 'ASC') ? 'DESC' : 'ASC';

                    sortColInput.value = column;
                    sortDirInput.value = newDir;
                    paginaInput.value = '1';

                    filtrosForm.submit();
                });
            });

            // Eliminar
            let idPerfilAEliminar = null;
            document.querySelectorAll('.btn-eliminar').forEach(btn => {
                btn.addEventListener('click', function () {
                    idPerfilAEliminar = this.getAttribute('data-id');
                    const nombrePerfil = this.getAttribute('data-perfil');
                    document.getElementById('perfilAEliminar').textContent = nombrePerfil;
                    const modal = new bootstrap.Modal(document.getElementById('confirmarEliminarModal'));
                    modal.show();
                });
            });

            document.getElementById('formEliminar').addEventListener('submit', function (e) {
                if (idPerfilAEliminar) {
                    this.querySelector('#idPerfilAEliminar').value = idPerfilAEliminar;
                } else {
                    e.preventDefault();
                    alert('Error: No se ha seleccionado un perfil para eliminar.');
                }
            });
        });
    </script>
}

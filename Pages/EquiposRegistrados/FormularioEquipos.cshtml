@page "/EquiposRegistrados/FormularioEquipos/{handler?}/{id:int?}"
@model InventarioComputo.Pages.EquiposRegistrados.FormularioEquiposModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Nuevo Modelo" : "Editar Modelo";
    Layout = "_LayoutGeneral";
}

<div class="container-form">
    <h1 class="beige-text"><i class="fas fa-laptop"></i> @ViewData["Title"]</h1>

    <form method="post" class="form-beige">
        <input type="hidden" asp-for="Id" />

        <!-- Datos básicos -->
        <div class="form-group">
            <label asp-for="Nombre" class="form-label">Nombre del Modelo</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdMarca" class="form-label">Marca</label>
            <select asp-for="IdMarca" class="form-control input-beige" asp-items="Model.Marcas">
                <option value="">-- Seleccione una marca --</option>
            </select>
            <span asp-validation-for="IdMarca" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdTipoEquipo" class="form-label">Tipo de Equipo</label>
            <select asp-for="IdTipoEquipo" class="form-control input-beige" asp-items="Model.TiposEquipos">
                <option value="">-- Seleccione un tipo --</option>
            </select>
            <span asp-validation-for="IdTipoEquipo" class="text-danger"></span>
        </div>

        <!-- Características técnicas (dinámicas) -->
        <div class="form-group">
            <label class="form-label">Características Técnicas</label>
            <div id="caracteristicas-container">
                @for (int i = 0; i < Model.Caracteristicas.Count; i++)
                {
                    <div class="caracteristica-item row mb-2">
                        <div class="col-md-5">
                            <input asp-for="Caracteristicas[i].Nombre" class="form-control" placeholder="Característica" />
                        </div>
                        <div class="col-md-5">
                            <input asp-for="Caracteristicas[i].Valor" class="form-control" placeholder="Valor" />
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-eliminar-caracteristica">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <button type="button" id="btn-agregar-caracteristica" class="btn btn-beige-sm mt-2">
                <i class="fas fa-plus"></i> Agregar Característica
            </button>
        </div>

        <!-- Softwares asociados -->
        <div class="form-group">
            <label class="form-label">Software Incluido</label>
            <div class="software-container">
                @foreach (var software in Model.SoftwaresDisponibles)
                {
                    <div class="form-check mb-2">
                        <input type="checkbox"
                               class="form-check-input software-checkbox"
                               name="SoftwareSeleccionados"
                               value="@software.Id"
                        @(Model.SoftwareSeleccionados.Contains(software.Id) ? "checked" : "") />
                        <label class="form-check-label">
                            @software.Nombre (v@software.Version)
                            <div class="licencia-input mt-1" style="@(Model.SoftwareSeleccionados.Contains(software.Id) ? "" : "display:none;")">
                                <input type="text"
                                       name="Licencias[@software.Id]"
                                       value="@(Model.Licencias.ContainsKey(software.Id) ? Model.Licencias[software.Id] : "")"
                                       class="form-control input-beige"
                                       placeholder="Clave de licencia (opcional)" />
                            </div>
                        </label>
                    </div>
                }
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-beige">Guardar</button>
            <a asp-page="Index" class="btn btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Agregar característica
            document.getElementById('btn-agregar-caracteristica').addEventListener('click', function () {
                const container = document.getElementById('caracteristicas-container');
                const index = container.children.length;
                const div = document.createElement('div');
                div.className = 'caracteristica-item row mb-2';
                div.innerHTML = `
                            <div class="col-md-5">
                                <input type="text" name="Caracteristicas[${index}].Nombre" class="form-control" placeholder="Característica" />
                            </div>
                            <div class="col-md-5">
                                <input type="text" name="Caracteristicas[${index}].Valor" class="form-control" placeholder="Valor" />
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-danger btn-eliminar-caracteristica">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        `;
                container.appendChild(div);
            });

            // Eliminar característica
            document.addEventListener('click', function (e) {
                if (e.target.closest('.btn-eliminar-caracteristica')) {
                    e.target.closest('.caracteristica-item').remove();

                    // Reindexar para mantener orden
                    const container = document.getElementById('caracteristicas-container');
                    const items = container.querySelectorAll('.caracteristica-item');
                    items.forEach((item, index) => {
                        item.querySelectorAll('input').forEach(input => {
                            const name = input.getAttribute('name');
                            const newName = name.replace(/\[\d+\]/, `[${index}]`);
                            input.setAttribute('name', newName);
                        });
                    });
                }
            });

            // Mostrar/ocultar campo de licencia
            document.querySelectorAll('.software-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', function () {
                    const licenciaInput = this.closest('.form-check').querySelector('.licencia-input');
                    licenciaInput.style.display = this.checked ? 'block' : 'none';
                });
            });
        });
    </script>
}
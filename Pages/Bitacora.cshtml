@page
@model InventarioComputo.Pages.BitacoraModel
@{
    ViewData["Title"] = "Bitácora del Sistema";
    Layout = "_LayoutGeneral";
}

<div class="inventario-container">
    <div class="inventario-header">
        <h1 class="beige-text"><i class="fas fa-book"></i> @ViewData["Title"]</h1>
    </div>

    <!-- FORM GET, igual que Asignaciones -->
    <form method="get" class="filtros-container beige-bg" id="form-filtros">
        <div class="filtros-group">
            <div class="filtro-item">
                <label class="form-label beige-text">Módulo:</label>
                <select id="filtro-modulo" name="modulo" class="form-select input-beige">
                    <option value="">Todos</option>
                    @foreach (var modulo in Model.Modulos)
                    {
                        <option value="@modulo.Id" selected="@(modulo.Id.ToString() == Model.ModuloFilter)">
                            @modulo.Nombre
                        </option>
                    }
                </select>
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Acción:</label>
                <select id="filtro-accion" name="accion" class="form-select input-beige">
                    <option value="">Todas</option>
                    @foreach (var accion in Model.Acciones)
                    {
                        <option value="@accion.Id" selected="@(accion.Id.ToString() == Model.AccionFilter)">
                            @accion.Nombre
                        </option>
                    }
                </select>
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Fecha Inicio:</label>
                <input type="date" id="filtro-fechainicio" name="fechainicio" class="form-control input-beige"
                       value="@Model.FechaInicioFilter" />
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Fecha Fin:</label>
                <input type="date" id="filtro-fechafin" name="fechafin" class="form-control input-beige"
                       value="@Model.FechaFinFilter" />
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Buscar:</label>
                <input type="text" id="filtro-busqueda" name="busqueda" class="form-control input-beige"
                       placeholder="Usuario, detalles..." value="@Model.BusquedaFilter" />
            </div>
        </div>

        <!-- Conserva orden actual y reinicia a página 1 al aplicar -->
        <input type="hidden" name="sortColumn" value="@Model.SortColumn" />
        <input type="hidden" name="sortDirection" value="@Model.SortDirection" />
        <input type="hidden" name="pagina" value="1" />

        <div class="d-flex justify-content-end mt-2">
            <a href="/Bitacora" class="btn btn-cancelar me-2">Limpiar</a>
            <button type="submit" class="btn btn-beige-sm"><i class="fas fa-filter"></i> Aplicar Filtros</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-beige sortable-table">
            <thead>
                <tr>
                    <th data-sort-column="FechaHora">
                        <a href="#" class="sort-link">
                            Fecha y Hora
                            @if (Model.SortColumn == "FechaHora")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Usuario">
                        <a href="#" class="sort-link">
                            Usuario
                            @if (Model.SortColumn == "Usuario")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Modulo">
                        <a href="#" class="sort-link">
                            Módulo
                            @if (Model.SortColumn == "Modulo")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Accion">
                        <a href="#" class="sort-link">
                            Acción
                            @if (Model.SortColumn == "Accion")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Detalles">
                        <a href="#" class="sort-link">
                            Detalles
                            @if (Model.SortColumn == "Detalles")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Registros.Count == 0)
                {
                    <tr><td colspan="5" class="text-center text-muted">Sin registros</td></tr>
                }
                else
                {
                    @foreach (var registro in Model.Registros)
                    {
                        <tr>
                            <td>@registro.FechaHora.ToString("g")</td>
                            <td>@registro.Usuario</td>
                            <td>@registro.Modulo</td>
                            <td>@registro.Accion</td>
                            <td>@registro.Detalles</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="paginacion">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    var url = $"/Bitacora?pagina={i}" +
                    $"&sortColumn={Model.SortColumn}" +
                    $"&sortDirection={Model.SortDirection}" +
                    $"&busqueda={Model.BusquedaFilter}" +
                    $"&modulo={Model.ModuloFilter}" +
                    $"&accion={Model.AccionFilter}" +
                    $"&fechainicio={Model.FechaInicioFilter}" +
                    $"&fechafin={Model.FechaFinFilter}";
                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                        <a class="page-link" href="@url">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const filtrosForm = document.getElementById('form-filtros');

            // Ordenamiento: actualiza hidden y envía el form
            document.querySelectorAll('.sort-link').forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const th = this.closest('th');
                    const column = th ? th.getAttribute('data-sort-column') : null;
                    if (!column || !filtrosForm) return;

                    const sortColInput = filtrosForm.querySelector('input[name="sortColumn"]');
                    const sortDirInput = filtrosForm.querySelector('input[name="sortDirection"]');
                    const paginaInput = filtrosForm.querySelector('input[name="pagina"]');

                    const currentCol = sortColInput?.value || 'FechaHora';
                    const currentDir = (sortDirInput?.value || 'DESC').toUpperCase();
                    const newDir = (currentCol === column && currentDir === 'ASC') ? 'DESC' : 'ASC';

                    if (sortColInput) sortColInput.value = column;
                    if (sortDirInput) sortDirInput.value = newDir;
                    if (paginaInput) paginaInput.value = '1';

                    filtrosForm.submit();
                });
            });
        });
    </script>
}

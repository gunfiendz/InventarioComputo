@page
@model InventarioComputo.Pages.Asignaciones.IndexModel
@{
    ViewData["Title"] = "Historial de Asignaciones";
    Layout = "_LayoutGeneral";
}

@section Styles {
    <link rel="stylesheet" href="~/Styles/Style_Inventario.css" asp-append-version="true" />
}

<div class="inventario-container">
    <div class="inventario-header">
        <h1 class="beige-text"><i class="fas fa-history"></i> @ViewData["Title"]</h1>
        <a href="/Asignaciones/Asignar" class="btn btn-beige">
            <i class="fas fa-plus"></i> Nueva Asignación
        </a>
    </div>

    <form method="get" class="filtros-container beige-bg">
        <div class="filtros-group">
            <div class="filtro-item">
                <label class="form-label">Empleado:</label>
                <select asp-for="EmpleadoId" class="form-select input-beige" asp-items="Model.Empleados">
                    <option value="">Todos</option>
                </select>
            </div>
            <div class="filtro-item">
                <label class="form-label">Departamento:</label>
                <select asp-for="DepartamentoId" class="form-select input-beige" asp-items="Model.Departamentos">
                    <option value="">Todos</option>
                </select>
            </div>
            <div class="filtro-item">
                <label class="form-label">Fecha Inicio:</label>
                <input type="date" asp-for="FechaInicio" class="form-control input-beige">
            </div>
            <div class="filtro-item">
                <label class="form-label">Fecha Fin:</label>
                <input type="date" asp-for="FechaFin" class="form-control input-beige">
            </div>
            <div class="filtro-item">
                <label class="form-label">Buscar Equipo:</label>
                <input type="text" asp-for="Busqueda" class="form-control input-beige" placeholder="Etiqueta o No. Serie...">
            </div>
        </div>
        <div class="d-flex justify-content-end mt-2">
            <a href="/Asignaciones/Index" class="btn btn-cancelar me-2">Limpiar</a>
            <button type="submit" class="btn btn-beige-sm"><i class="fas fa-filter"></i> Aplicar Filtros</button>
        </div>
    </form>

    <div class="table-responsive mt-4">
        <table class="table table-hover table-beige">
            <thead>
                <tr>
                    <th><a href="#" class="sort-link" data-sort-column="FechaAsignacion">Fecha Asig.</a></th>
                    <th><a href="#" class="sort-link" data-sort-column="Equipo">Equipo</a></th>
                    <th>Tipo Asig.</th>
                    <th><a href="#" class="sort-link" data-sort-column="Empleado">Empleado</a></th>
                    <th><a href="#" class="sort-link" data-sort-column="Departamento">Departamento</a></th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Historial)
                {
                    <tr>
                        <td>@item.FechaAsignacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            @item.Equipo
                            <small class="d-block text-muted">S/N: @item.NumeroSerie</small>
                        </td>
                        <td>@item.TipoAsignacion</td>
                        <td>@item.Empleado</td>
                        <td>@item.Departamento</td>
                        <td>
                            @if (item.EsActiva)
                            {
                                <span class="badge estado-activa">Activa</span>
                            }
                            else
                            {
                                <span class="badge estado-historica">Histórica</span>
                                <small class="d-block text-muted">Retiro: @item.FechaRetiro?.ToString("dd/MM/yyyy")</small>
                            }
                        </td>
                        <td class="acciones">
                            <a href="/Asignaciones/Asignar/Editar/@item.Id" class="btn btn-action">
                                <i class="fas fa-pen"></i>
                            </a>
                            <button type="button"
                                  class="btn btn-action btn-eliminar"
                                  data-id="@item.Id"
                                  data-equipo="@item.Equipo"      
                                  data-empleado="@item.Empleado"    
                                  title="Eliminar">
                            <i class="fas fa-trash-alt"></i>
                          </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="paginacion">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    var url = $"?pagina={i}";
                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                        <a class="page-link" href="@url">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-labelledby="confirmarEliminarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmarEliminarLabel"><i class="fas fa-trash-alt"></i> Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p>¿Seguro que deseas eliminar la siguiente asignación?</p>
                <div id="detalle-eliminar" class="text-muted small"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="formEliminar" method="post" asp-page-handler="Delete" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="eliminar-id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Sort por encabezado (conserva el patrón que ya usas: querystring sortColumn/sortDirection/paginaActual)
        document.addEventListener('DOMContentLoaded', function () {
            const ths = document.querySelectorAll('th.sortable[data-sort-column]');
            ths.forEach(th => {
                th.style.cursor = 'pointer';
                th.addEventListener('click', () => {
                    const column = th.getAttribute('data-sort-column');
                    const url = new URL(window.location.href);

                    const currentOrder = (url.searchParams.get('sortDirection') || 'ASC').toUpperCase();
                    let newOrder = 'ASC';
                    if ((url.searchParams.get('sortColumn') || '') === column && currentOrder === 'ASC') {
                        newOrder = 'DESC';
                    }

                    url.searchParams.set('sortColumn', column);
                    url.searchParams.set('sortDirection', newOrder);
                    url.searchParams.set('paginaActual', '1');
                    window.location.href = url.toString();
                });
            });
        });

        // Eliminar: abre el modal y prepara el form con datos
        document.addEventListener('click', function (e) {
            const btn = e.target.closest('.btn-eliminar');
            if (!btn) return;

            const id = btn.dataset.id;
            const equipo = btn.dataset.equipo || '';
            const empleado = btn.dataset.empleado || '';

            const detalle = [equipo, empleado].filter(Boolean).join(' | ');
            const detalleDiv = document.getElementById('detalle-eliminar');
            detalleDiv.textContent = detalle ? `Asignación: ${detalle}` : `Id: ${id}`;

            document.getElementById('eliminar-id').value = id;

            const modalEl = document.getElementById('confirmarEliminarModal');
            const modal = new bootstrap.Modal(modalEl);
            modal.show();
        });
    </script>
}
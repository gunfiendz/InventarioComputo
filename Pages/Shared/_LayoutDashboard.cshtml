<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/Style_LayoutDashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="dashboard-header">
        <div class="header-content">
            <a href="/Principal" class="logo-link">
                <img src="~/images/Logo_LaArmeria.png" alt="Logo La Armería" class="dashboard-logo">
            </a>
            <div class="dashboard-controls">
                <a href="/Index" class="logout-btn" title="Cerrar sesión">
                    <i class="fas fa-sign-out-alt"></i>
                    <span class="logout-text">Salir</span>
                </a>
            </div>
        </div>
    </header>

    <main class="dashboard-main">
        @RenderBody()
    </main>

    <footer class="dashboard-footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - La Armería</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
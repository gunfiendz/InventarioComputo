@page
@model UsuariosModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "_LayoutGeneral";
}

<div class="inventario-container">
    <div class="inventario-header">
        <h1 class="beige-text"><i class="fas fa-user-cog"></i> @ViewData["Title"]</h1>
        <a asp-page="NuevoUsuario" class="btn btn-beige">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
    </div>

    <div class="filtros-container beige-bg">
        <div class="filtros-group">
            <div class="filtro-item">
                <label class="form-label beige-text">Rol:</label>
                <select id="filtro-rol" class="form-select input-beige">
                    <option value="">Todos</option>
                    @foreach (var rol in Model.Roles)
                    {
                        <option value="@rol.Id" selected="@(rol.Id.ToString() == Model.RolFilter)">@rol.Nombre</option>
                    }
                </select>
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Empleado:</label>
                <select id="filtro-empleado" class="form-select input-beige">
                    <option value="">Todos</option>
                    @foreach (var empleado in Model.Empleados)
                    {
                        <option value="@empleado.Id" selected="@(empleado.Id.ToString() == Model.EmpleadoFilter)">@empleado.Nombre</option>
                    }
                </select>
            </div>

            <div class="filtro-item">
                <label class="form-label beige-text">Buscar:</label>
                <input type="text" id="filtro-busqueda" class="form-control input-beige"
                       placeholder="Usuario, email..." value="@Model.BusquedaFilter">
            </div>
        </div>
        <button id="btn-aplicar-filtros" class="btn btn-beige-sm">
            <i class="fas fa-filter"></i> Aplicar Filtros
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-beige sortable-table">
            <thead>
                <tr>
                    <th data-sort-column="Usuario">
                        <a href="#" class="sort-link">
                            Usuario
                            @if (Model.SortColumn == "Usuario")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Empleado">
                        <a href="#" class="sort-link">
                            Empleado
                            @if (Model.SortColumn == "Empleado")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th data-sort-column="Rol">
                        <a href="#" class="sort-link">
                            Rol
                            @if (Model.SortColumn == "Rol")
                            {
                                <i class="fas fa-sort-@(Model.SortDirection == "ASC" ? "up" : "down")"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort"></i>
                            }
                        </a>
                    </th>
                    <th>Último Acceso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>@usuario.Username</td>
                        <td>@usuario.Empleado</td>
                        <td>@usuario.Rol</td>
                        <td>@usuario.UltimoAcceso?.ToString("g")</td>
                        <td class="acciones">
                            <a asp-page="EditarUsuario" asp-route-id="@usuario.Id" class="btn btn-action" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-page="PermisosUsuario" asp-route-id="@usuario.Id" class="btn btn-action" title="Permisos">
                                <i class="fas fa-key"></i>
                            </a>
                            <button class="btn btn-action btn-eliminar"
                                    data-id="@usuario.Id"
                                    data-usuario="@usuario.Username"
                                    title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="paginacion">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    var url = $"/Usuarios?pagina={i}" +
                    $"&sortColumn={Model.SortColumn}" +
                    $"&sortDirection={Model.SortDirection}" +
                    $"&rol={Model.RolFilter}" +
                    $"&empleado={Model.EmpleadoFilter}" +
                    $"&busqueda={Model.BusquedaFilter}";

                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                        <a class="page-link" href="@url">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header beige-bg">
                <h5 class="modal-title beige-text">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea eliminar el usuario: <strong id="usuarioEliminar"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btn-confirmar-eliminar">Eliminar</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/Styles/Style_Inventario.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        // Ordenamiento
        document.querySelectorAll('.sort-link').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();
                const column = this.closest('th').dataset.sortColumn;
                const currentOrder = '@Model.SortDirection';
                const newOrder = currentOrder === 'ASC' ? 'DESC' : 'ASC';

                const url = new URL(window.location.href);
                url.searchParams.set('sortColumn', column);
                url.searchParams.set('sortDirection', newOrder);
                url.searchParams.set('pagina', '1');

                window.location.href = url.toString();
            });
        });

        // Eliminación
        let usuarioAEliminar = null;
        document.querySelectorAll('.btn-eliminar').forEach(btn => {
            btn.addEventListener('click', function () {
                usuarioAEliminar = {
                    id: this.getAttribute('data-id'),
                    usuario: this.getAttribute('data-usuario')
                };

                document.getElementById('usuarioEliminar').textContent = usuarioAEliminar.usuario;
                const modal = new bootstrap.Modal(document.getElementById('confirmarEliminarModal'));
                modal.show();
            });
        });

        document.getElementById('btn-confirmar-eliminar').addEventListener('click', function () {
            if (usuarioAEliminar) {
                fetch(`/Usuarios/Eliminar/${usuarioAEliminar.id}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                        'Content-Type': 'application/json'
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error al eliminar el usuario');
                    }
                }).catch(error => {
                    console.error('Error:', error);
                    alert('Error al eliminar el usuario');
                });
            }
        });

        // Aplicar filtros
        document.getElementById('btn-aplicar-filtros').addEventListener('click', function () {
            const rol = document.getElementById('filtro-rol').value;
            const empleado = document.getElementById('filtro-empleado').value;
            const busqueda = document.getElementById('filtro-busqueda').value;

            const url = new URL(window.location.href);
            url.searchParams.set('pagina', '1');
            url.searchParams.set('sortColumn', '@Model.SortColumn');
            url.searchParams.set('sortDirection', '@Model.SortDirection');
            if (rol) url.searchParams.set('rol', rol);
            if (empleado) url.searchParams.set('empleado', empleado);
            if (busqueda) url.searchParams.set('busqueda', busqueda);

            window.location.href = url.toString();
        });
    </script>
}